{{#unless logged}}
<form class="form" method="POST">
  <div class="subtitle">Please Register First</div>
  <div class="input-container ic1">
  <input type="text" placeholder="First Name" id="fname" class="input" name="fname"><br>
 
  <input class="input" type="text" id="lname" placeholder="Last Name" name="lname"><br>

  <input  class="input" type="email" id="email" placeholder="E-Mail" name="email"><br>

  <input  class="input" type="password" id="password" placeholder="password" name="password"><br>

  <input  class="input" type="password" id="repassword" placeholder="re password" name="repassword"><br><br>
 
  <button class="submit" id="btn">Register</button>
   </div>
 </form>
 {{/unless}}
  {{#if showPasswordError}}
  <h3 id="error">Err:you should enter same passwords</h3>
  {{/if}}
  {{#if showBlankError}}
  <h3 id="error">Err:you should write your name or last name</h3>
  {{/if}}
{{#if showDbError}}
  <h3 id="dberror">Err:database error</h3>
{{/if}}

